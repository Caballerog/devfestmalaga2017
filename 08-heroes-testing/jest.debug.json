{
    "globals": {
        "ts-jest": {
            "skipBabel": true
        }
    },
    "rootDir": "./",
    "transform": {
        ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|dist/.*\\.(test|spec))\\.js$",
    "testPathIgnorePatterns": [
        "/node_modules/",
        ".*\\.d\\.ts$"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/jest.setup.ts",
    "moduleFileExtensions": [
        "js"
    ]
}
